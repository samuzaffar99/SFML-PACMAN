{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run SFML-PACMAN",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/SFML-PACMAN.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe", // or your MinGW gdb
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
